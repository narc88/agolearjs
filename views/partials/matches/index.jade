ul
	li(ng-repeat="match in matches") 
		div(class="row")
			div(class="hourandfield")
				span(class="label label-default")
					a( href="/fields/{{match.turn[0].field[0]._id}}") {{match.turn[0].field[0].name}}
				span(class="label label-primary") {{match.turn[0].hour}} : {{match.turn[0].minute}} Hs.
				span(class="pull-right")
					a(href="/matches/{{match._id}}/edit") Editar
			div(class="match_body")
				div(class="col-md-5 local_team")
					div(class="col-md-8 v-center")
						a(href="/teams/{{match.local_team._id}}", class="content_valign") {{match.local_team.name}} 
					div(class="col-md-4")
						a(href="#", class="thumbnail")
							img(ng-if="!isUndefinedOrNull(player.logo_image)", ng-src="/photos/team/{{match.local_team._id}}/{{team.logo_image.filename}}", width="100px" ,style="width:100px,max-height:100px;")
							img(ng-if="isUndefinedOrNull(player.logo_image)", ng-src="/img/logoteam.png", width="100px" ,style="width:100px,max-height:100px;")
				div(class="col-md-2 v-center")
					div(class="content_valign")
						a(href="/matches/{{match._id}}") {{match.local_goals.length}} - {{match.visitor_goals.length}} 
				div(class="col-md-5 visitor_team")
					div(class="col-md-4")
						a(href="#", class="thumbnail")
							img(ng-if="!isUndefinedOrNull(player.logo_image)",ng-src="/photos/team/{{match.visitor_team._id}}/{{team.logo_image.filename}}", width="100px" ,style="width:100px,max-height:100px;")
							img(ng-if="isUndefinedOrNull(player.logo_image)", ng-src="/img/logoteam.png", width="100px" ,style="width:100px,max-height:100px;")
					div(class="col-md-8 v-center")
						a(href="/teams/{{match.visitor_team._id}}", class="content_valign") {{match.visitor_team.name}}