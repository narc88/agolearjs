include admin_menu
form(name="editTeam", ng-submit="submitTeam(editTeam)")
	.form-group
		label(for="name") Nombre
		input(ng-model='team.name', name='name', id="name", type='text').form-control.input-sm
		div(ng-show="editTeam['name'].$error.mongoose", style="color: red") {{editTeam.name.$error.mongoose}}
	.form-group
		input(type="submit", value="Guardar").btn.btn-primary