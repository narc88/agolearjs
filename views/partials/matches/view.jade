//Incindent and Goals container

div(class="result col-md-12")
	div(class="local col-md-6")
		div(class="col-md-2")
			a(href="#", class="thumbnail")
				img(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;", alt="...")
		div(class="col-md-9")
			p {{match.local_team.name}}
			span {{match.local_goals.length}}
	div(class="visitor col-md-6")
		div(class="col-md-9")
			p {{match.visitor_team.name}}
			span {{match.visitor_goals.length}}
		div(class="col-md-2")
			a(href="#", class="thumbnail")
				img(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;", alt="...")
h2 Goles e Incidentes
div(class="incidents col-md-12")
	div(class="local col-md-6")
		ul
			li(ng-repeat="goal in match.local_goals")
				span Gol: {{goal.player.name}} {{goal.player.last_name}}
			li(ng-repeat="incident in match.local_incidents")
				span {{incident.incident_type}}: {{incident.player.name}} {{incident.player.last_name}}
			-var role = "local"
			div(class="panel-group", id="accordion#{role}", role="tablist", aria-multiselectable="true")
				include ../goals/form.jade
				include ../incidents/form.jade
	div(class="visitor col-md-6")
		ul
			li(ng-repeat="goal in match.visitor_goals")
				span Gol:  {{goal.player.name}} {{goal.player.last_name}}
			li(ng-repeat="incident in match.visitor_incidents")
				span {{incident.incident_type}}: {{incident.player.name}} {{incident.player.last_name}}
			-var role = "visitor"
			div(class="panel-group", id="accordion#{role}", role="tablist", aria-multiselectable="true")
				include ../goals/form.jade
				include ../incidents/form.jade
h2 Horario y Cancha
div(class="time")
	span {{match.turn[0].field.name}}
	span {{match.turn[0].hour}}
	span {{match.turn[0].minute}}
h2 Jugadores
div(class="players")
	div(class="local col-md-6")
		ul
			li(ng-repeat="player in match.local_players")
				span {{player.name}} {{player.last_name}}
	div(class="visitor col-md-6")
		ul
			li(ng-repeat="player in match.visitor_players")
				span {{player.name}} {{player.last_name}}
