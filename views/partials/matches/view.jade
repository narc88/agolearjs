//Incindent and Goals container
a(href="/zones/{{zone._id}}") Volver
div(class="result col-md-12")
	div(class="local col-md-6")
		div(class="col-md-2")
			a(href="#", class="thumbnail")
				img(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;", alt="...")
		div(class="col-md-9")
			p {{match.local_team.name}}
			span {{match.local_goals.length}}
	div(class="visitor col-md-6")
		div(class="col-md-9")
			p {{match.visitor_team.name}}
			span {{match.visitor_goals.length}}
		div(class="col-md-2")
			a(href="#", class="thumbnail")
				img(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;", alt="...")
h2 Goles e Incidentes
div(class="incidents col-md-12")
	div(class="local col-md-6")
		ul
			li(ng-repeat="goal in match.local_goals")
				span {{goal.player.name}} {{goal.player.last_name}}
			li(ng-repeat="goal in match.local_incidents")
				span {{goal.player.name}} {{goal.player.last_name}}
			a()
	div(class="visitor col-md-6")
		ul
			li(ng-repeat="goal in match.visitor_goals")
				span {{goal.player.name}} {{goal.player.last_name}}
			li(ng-repeat="goal in match.visitor_incidents")
				span {{goal.player.name}} {{goal.player.last_name}}
h2 Horario y Cancha
div(class="time")
	span {{match.turn[0].field.name}}
	span {{match.turn[0].hour}}
	span {{match.turn[0].minute}}
h2 Jugadores
div(class="players")
	div(class="local")
	div(class="visitor")

div(class="panel-group", id="accordion", role="tablist", aria-multiselectable="true")
	div(class="panel panel-default")
		div(class="panel-heading", role="tab", id="headingOne")
			h4(class="panel-title")
				a(data-toggle="collapse", data-parent="#accordion", data-target="#goalLocalCollapse", aria-expanded="true", aria-controls="collapseOne") Gol
		div(id="goalLocalCollapse", class="panel-collapse collapse in", role="tabpanel", aria-labelledby="headingOne")
			div(class="panel-body")
				form(name="addGoal", ng-submit="submitGoal(addGoal)")
					.form-group
						label(for="player") Jugador
						select(ng-model='goal.player', name='player', id="player").form-control.input-sm
							option(ng-repeat="player in match.local_players" value="{{player._id}}") {{player.name}} {{player.last_name}}
					.form-group
						label(for="minute") Minute
						input(ng-model='goal.minute', name='minute', id="minute", type='text').form-control.input-sm
					.form-group
						label(for="own_goal") En contra
						input(ng-model='goal.own_goal', name='own_goal', id="own_goal", type='checkbox').form-control
					.form-group
						input(type="submit", value="Guardar").btn.btn-primary
	div(class="panel panel-default")
		div(class="panel-heading", role="tab", id="headingOne")
			h4(class="panel-title")
				a(data-toggle="collapse", data-parent="#accordion", data-target="#incidentLocalCollapse", aria-expanded="true", aria-controls="collapseOne") Incidente
		div(id="incidentLocalCollapse", class="panel-collapse collapse in", role="tabpanel", aria-labelledby="headingOne")
			div(class="panel-body")
				form(name="addIncident", ng-submit="submitIncident(addIncident)")
					.form-group
						label(for="player") Jugador
						select(ng-model='incident.player', name='player', id="player",  ng-options="player.name for player in match.local_players").form-control.input-sm
					.form-group
						label(for="minute") Minute
						input(ng-model='incident.minute', name='minute', id="minute", type='text').form-control.input-sm
					.form-group
						label(for="incident_type") Tipo
						select(ng-model='incident.incident_type', name='incident_type', id="incident_type" ,  ng-options="player.name for player in match.local_players").form-control
					.form-group
						input(type="submit", value="Guardar").btn.btn-primary