div(class="media")
	a(class="pull-left", href="#")
		img(class="media-object" src="..." alt="...")
	div(class="media-body")
	h4(class="media-heading")
		a(href="/teams/{{team._id}}") {{team.name}}
div(class="col-md-6")
	img(ng-repeat="image in team.images" src="/photos/team/{{team._id}}/{{image.filename}}")
div(class="col-md-6")
	ul
		li(ng-repeat="player in team.players")
			a(href="/players/{{player._id}}")  {{player.name}} {{player.last_name}}
			if(RolesHelper.admin(user))
				a(href="/players/edit/{{player._id}}")  Editar
if(RolesHelper.admin(user))
	div(class="admin_section")
		h3 Agregar imagen
		-model = "team"
		a(ng-repeat="type in imageTypes.#{model}", href="/images/add/#{model}/{{team._id}}/{{type}}") {{type}} 