include admin_menu
form(name="addTeam", ng-submit="submitTeam(addTeam)")
	.form-group
		label(for="name") Nombre
		input(ng-model='team.name', name='name', id="name", type='text').form-control.input-sm
		div(ng-show="addTeam['name'].$error.mongoose", style="color: red") {{addTeam.name.$error.mongoose}}
	.form-group
		input(type="submit", value="Guardar").btn.btn-primary