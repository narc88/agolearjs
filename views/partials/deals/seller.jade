.well.pull-right.col-md-3.media
	p Vendedor
	a(href="/users/#{deal.seller._id}", class="pull-left").media
		if (typeof deal.seller.images !== "undefined")
			if (typeof deal.seller.images[0] === "undefined")
				img(src="/img/mr_bean.png", class='media-object', style="width:40px; height:40px; margin-bottom:10px;")
			else
				img(class='media-object', src="/photos/users/#{deal.seller.images[0].filename}", style="width:40px; height:40px; margin-bottom:10px;")
		else
			img(class='media-object', src="/img/mr_bean.png", style="width:40px; height:40px; margin-bottom:10px;")
	.media-body
		h4 #{deal.seller.username}
		p #{deal.seller.name} #{deal.seller.lname}
		a(href="/users/#{deal.seller._id}") Ver