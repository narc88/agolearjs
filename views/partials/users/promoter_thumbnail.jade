.well.media
	a(href="/users/#{promoter._id}", class="pull-left").media
		if (typeof promoter.images !== "undefined")
			if (typeof promoter.images[0] === "undefined")
				img(src="/img/mr_bean.png", class='media-object', style="width:40px; height:40px; margin-bottom:10px;")
			else
				img(class='media-object', src="/photos/users/#{promoter.images[0].filename}", style="width:40px; height:40px; margin-bottom:10px;")
		else
			img(class='media-object', src="/img/mr_bean.png", style="width:40px; height:40px; margin-bottom:10px;")
	.media-body
		h4 #{promoter.username}
		p #{promoter.name} #{promoter.lname}
		-if(RolesHelper.partner(promoter))
			p Promotor 
		-if(RolesHelper.seller(promoter))
			p Vendedor 
		a(href="/users/profile/#{promoter._id}").btn.btn-primary Ver