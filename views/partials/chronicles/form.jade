link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
script 
	$('#chronicle').Editor();
form(name="addChronicle", ng-submit="submitChronicle(addChronicle)")
	.form-group
		label(for="title") Titulo
		input(ng-model='chronicle.title', name='title', id="title", type='text').form-control.input-sm
		div(ng-show="addChronicle['title'].$error.mongoose", style="color: red") {{addChronicle.title.$error.mongoose}}
	.form-group
		label(for="summary") Resumen
		textarea(ng-model='chronicle.summary', name='summary', id="summary", type='text').form-control.input-sm
		div(ng-show="addChronicle['summary'].$error.mongoose", style="color: red") {{addChronicle.summary.$error.mongoose}}
	.form-group
		label(for="chronicle") Cr√≥nica
		textarea(ng-model='chronicle.chronicle', name='chronicle', id="chronicle", type='text').form-control.input-sm
		div(ng-show="addChronicle['chronicle'].$error.mongoose", style="color: red") {{addChronicle.name.$error.mongoose}}
	.form-group
		label(for="outstanding") Destacada
		input(ng-model='chronicle.outstanding', name='outstanding', id="outstanding", type='checkbox').form-control.input-sm
	.form-group
		input(type="submit", value="Guardar").btn.btn-primary