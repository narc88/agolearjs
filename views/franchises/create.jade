div(class='modal fade', id='CreateFranchise', tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
	div(class='modal-dialog')
		div(class='modal-content')
			div(class='modal-header')
				button(type='button', class='close', data-dismiss='modal', aria-hidden='true') &times
				h4(class='modal-title', id='myModalLabel') Nueva Franquicia
			div(class='modal-body')
				form(method='post', id="franchise_create", action='/franchises/create').form-horizontal
					.form-group
							label.col-md-3.control-label Nombre:
							.col-md-8
								input(name='franchise[name]', type='text').form-control.input-sm
					.form-group
							label.col-md-3.control-label Nombre corto:
							.col-md-8
								input(name='franchise[slug]', type='text').form-control.input-sm
					.form-group
							label.col-md-3.control-label Por defecto?:
							.col-md-2
								input(name='franchise[is_default]', type='text').form-control.input-sm
					.form-group
							label.col-md-3.control-label Zona horaria:
							.col-md-2
								input(name='franchise[timezone]', type='text').form-control.input-sm
					br
					.form-group
						.col-sm-offset-3.col-sm-8
							button(type='submit').btn.btn-primary Cargar