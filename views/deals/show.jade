extends ../home

block content
	-var images = deal.images
	-var id = deal._id
	-var param = 'deals'
	-var title = deal.title
	-var description = deal.characteristics
	.col-md-9
		include ../partials/images/carousel_show
	include ../partials/deals/checkout_link
	.deal_body.col-md-9.clear
		table.table-condensed
		h4 Detalles y Condiciones de la oferta
		br
		table.table.table-condensed.table-striped
			tr
				td
					label Titulo:
				td #{deal.title}
			tr
				td 
					label Subtitulo:
				td #{deal.tagline}
			tr
				td 
					label Link:
				td #{deal.slug}
			tr
				td 
					label Caracteristicas:
				td #{deal.characteristics}
			tr
				td 
					label Condiciones:
				td #{deal.conditions}
		br
		.alert.alert-info
			p Podrás canjear esta oferta a partir del día #{deal.start_redeem.getDate()} / #{deal.start_redeem.getMonth()+1} / #{deal.start_redeem.getFullYear()}  y hasta el día #{deal.end_redeem.getDate()} / #{deal.end_redeem.getMonth()+1} / #{deal.end_redeem.getFullYear()} 

		include ../partials/questions/container
	-var store = deal.store 
	include ../partials/store/store
